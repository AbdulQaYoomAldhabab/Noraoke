<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.adrianblan.noraoke" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.adrianblan.noraoke.SongInfoActivity"
            android:label="I Want It That Way"
            android:theme="@style/TransparentTheme"
            android:screenOrientation="portrait"

            android:parentActivityName="co.adrianblan.noraoke.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="co.adrianblan.noraoke.MainActivity" />
        </activity>

    </application>
</manifest>
