<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_control_size"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/music_control_song"
            android:layout_width="@dimen/music_control_size"
            android:layout_height="fill_parent"
            android:padding="0dp"
            android:src="@drawable/backstreetboys"/>
     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/music_control_prev"
            android:layout_width="@dimen/music_control_icon_size"
            android:layout_height="@dimen/music_control_icon_size"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:drawableBottom="@drawable/ic_skip_previous_black_24dp"
            android:background="@null"
            android:clickable="true"/>

        <Button
            android:id="@+id/music_control_play"
            android:layout_width="@dimen/music_control_size"
            android:layout_height="@dimen/music_control_size"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:drawableBottom="@drawable/ic_play_arrow_black_24dp"
            android:background="@null"
            android:clickable="true"
            />

        <Button
            android:id="@+id/music_control_next"
            android:layout_width="@dimen/music_control_icon_size"
            android:layout_height="@dimen/music_control_icon_size"
            android:layout_gravity="center"

            android:padding="0dp"
            android:layout_marginTop="4dp"
            android:drawableBottom="@drawable/ic_skip_next_black_24dp"
            android:background="@null"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/music_control_size"
        android:layout_height="@dimen/music_control_size"
        android:gravity="right"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/music_control_playlist"
            android:layout_width="@dimen/music_control_size"
            android:layout_height="@dimen/music_control_size"
            android:layout_gravity="center_vertical"
            android:paddingRight="9dp"
            android:drawableRight="@drawable/ic_queue_music_black_24dp"
            android:background="@null"
            android:clickable="true"/>
    </LinearLayout>

</RelativeLayout>