<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="co.adrianblan.noraoke.SongPlayingActivity">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/nowplayinglarge"
            android:scaleType="fitXY"
            />

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:id="@+id/songplaying_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarStyle.Transparent"
            android:elevation="4dp"/>
    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
    android:id="@+id/now_playing_large_fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:src="@mipmap/ic_mic_off_white_24dp"
    fab:fab_colorNormal="@color/primary_text_disabled_material_dark"
    fab:fab_colorPressed="@color/secondary_text_default_material_dark"
    />

</FrameLayout>